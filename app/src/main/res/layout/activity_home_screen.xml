<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jrobins.jrobins.escape2.HomeScreenActivity"
    android:orientation="vertical"
    android:background="@android:color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".5"
        android:orientation="horizontal"
        android:padding="0dip"
        android:layout_margin="0dip"
        android:background="@android:color/black">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.33">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:orientation="vertical"
            android:padding="0dip"
            android:layout_margin="0dip"
            android:gravity="center"
            android:layout_gravity="bottom">

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/logo_color"/>

            <com.jrobins.jrobins.escape2.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logo_text_top"
                android:gravity="bottom"
                android:textColor="@color/logo_color"
                android:padding="0dip"
                android:layout_marginBottom="-10dip"
                android:layout_marginTop="-5dip"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            <com.jrobins.jrobins.escape2.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logo_text_middle"
                android:gravity="top"
                android:textColor="@color/logo_color"

                android:textStyle="bold"
                android:padding="0dip"
                android:layout_margin="0dip"
                android:layout_gravity="top"
                />

            <com.jrobins.jrobins.escape2.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logo_text_bottom"
                android:gravity="top"
                android:textColor="@color/logo_color"
                android:textStyle="bold"
                android:padding="0dip"
                android:layout_marginTop="-7dip"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/logo_color"

                />
                <!-- 70% Width End-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.33">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:gravity="top">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_button_start"
            android:id="@+id/start"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/homescreen_button_text_color"
            android:background="@color/button_color"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_button_resume"
            android:id="@+id/resume"
            android:layout_gravity="center_horizontal"
            android:background="@color/button_color"
            android:visibility="gone"
            android:textColor="@drawable/homescreen_button_text_color"
            />

        <Button

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_button_create_map"
            android:id="@+id/create"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:textColor="@drawable/homescreen_button_text_color"
            />
        <Button

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_button_rules"
            android:id="@+id/rules"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/homescreen_button_text_color"
            android:background="@color/button_color"


            />
    </LinearLayout>




</LinearLayout>
