<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jrobins.jrobins.escape2.HomeScreenActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"

        android:src="@mipmap/logo"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_button_start"
        android:id="@+id/start"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_button_resume"
        android:id="@+id/resume"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

    <Button

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_button_create_map"
        android:id="@+id/create"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
    <Button

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_button_rules"
        android:id="@+id/rules"
        android:layout_gravity="center_horizontal"

        />





</LinearLayout>
