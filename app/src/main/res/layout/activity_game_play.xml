<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jrobins.jrobins.escape2.GamePlay"
    android:orientation="horizontal">





        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:id="@+id/playerList"
            android:layout_gravity="center"
            android:background="@android:color/black"
            />





    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <com.jrobins.jrobins.escape2.MapView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:id="@+id/hexagonMap"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:text="1"
                        android:background="@android:color/black"
                        android:id="@+id/turnNumber"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                    <Button
                        style="?android:attr/buttonStyleInset"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_action_next_item"
                        android:id="@+id/advance_player_turn"
                        android:layout_gravity="center"
                        android:gravity="center"

                        />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_action_edit"
                    android:id="@+id/show_edit_panel"
                    android:layout_gravity="center"
                    android:gravity="center"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_help"
                    android:id="@+id/help"
                    android:layout_gravity="center"
                    android:gravity="center"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_corners"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTurnPanel"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_previous_item"
                        android:id="@+id/previous_turn"
                        android:layout_gravity="left"
                        android:gravity="left"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="1"
                        android:background="@android:color/black"
                        android:id="@+id/prevTurnNumber"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <Button
                        style="?android:attr/buttonStyleSmall"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_action_next_item"
                        android:id="@+id/advance_turn"
                        android:layout_gravity="right"
                        android:gravity="right"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>






</LinearLayout>
